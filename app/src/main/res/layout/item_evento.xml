<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/card_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto del organizador -->
        <ImageView
            android:id="@+id/imgOrganizador"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/foto_organizador"
            android:src="@android:drawable/ic_menu_myplaces"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_myplaces" />

        <!-- Nombre del organizador -->
        <TextView
            android:id="@+id/tvOrganizadorNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/chipEstado"
            app:layout_constraintStart_toEndOf="@id/imgOrganizador"
            app:layout_constraintTop_toTopOf="@id/imgOrganizador"
            tools:text="Juan PÃ©rez" />

        <!-- Chip de estado -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_dark"
            app:chipCornerRadius="8dp"
            app:chipMinHeight="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/estado_abierto"
            tools:chipBackgroundColor="@color/success" />

        <!-- Fecha del evento -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableStartCompat="@android:drawable/ic_menu_today"
            app:drawableTint="@color/icon_muted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgOrganizador"
            app:layout_constraintTop_toBottomOf="@id/tvOrganizadorNombre"
            tools:text="15 de febrero, 2026" />

        <!-- Hora del evento -->
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:drawableStartCompat="@android:drawable/ic_menu_recent_history"
            app:drawableTint="@color/icon_muted"
            app:layout_constraintStart_toStartOf="@id/tvFecha"
            app:layout_constraintTop_toBottomOf="@id/tvFecha"
            tools:text="09:00" />

        <!-- DescripciÃ³n del evento -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHora"
            tools:text="Ruta para disfrutar del amanecer en la montaÃ±a con un grupo de senderistas" />

        <!-- Texto participantes -->
        <TextView
            android:id="@+id/tvParticipantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
            tools:text="5/10 participantes" />

        <!-- Barra de progreso participantes -->
        <ProgressBar
            android:id="@+id/progressParticipantes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="5"
            android:progressTint="@color/sl_primary"
            android:progressBackgroundTint="@color/bg_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvParticipantes" />

        <!-- âœ… NUEVO: BotÃ³n Ver Ruta -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerRuta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver ruta"
            android:visibility="visible"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_mapmode"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/progressParticipantes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <!-- BotÃ³n Unirse/Salir -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/unirse"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerRuta"
            tools:visibility="visible" />

        <!-- BotÃ³n Cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Cancelar"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:strokeColor="@color/error"
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerRuta"
            tools:visibility="visible" />

        <!-- Barrier para que Chat vaya debajo del botÃ³n visible -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btnVerRuta,btnJoin,btnCancel" />

        <!-- BotÃ³n Chat -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ’¬ Chat"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/barrierButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

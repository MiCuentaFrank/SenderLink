<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor del mapa -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Card con informaci贸n de distancia y tiempo (MS ABAJO) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRouteInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="top"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRouteInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" C贸mo llegar al inicio"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Distancia"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvDistanceToStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculando..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/sl_primary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="憋 Tiempo"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvTimeToStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculando..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/sl_primary"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- FAB: Mi ubicaci贸n (TOP RIGHT, MS ABAJO) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:layout_marginTop="200dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:backgroundTint="@color/white"
        app:tint="@color/sl_primary"
        app:elevation="6dp"
        android:contentDescription="Mi ubicaci贸n"/>

    <!-- FAB: Ajustar vista a la ruta -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFitRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:layout_marginTop="276dp"
        android:src="@android:drawable/ic_menu_view"
        app:backgroundTint="@color/white"
        app:tint="@color/sl_primary"
        app:elevation="6dp"
        android:contentDescription="Ver ruta completa"
        android:visibility="gone"/>

    <!-- FAB: Iniciar navegaci贸n (ABAJO, CON MARGIN DEL BOTTOM NAV) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabStartNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:text=" Ir al inicio"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_directions"
        app:backgroundTint="@color/sl_primary"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        app:elevation="8dp"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
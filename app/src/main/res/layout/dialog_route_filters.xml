<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- DIFICULTAD -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEasy"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="Fácil"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipModerate"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="Media"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHard"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="Difícil"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- TIPO DE RUTA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de ruta"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGR"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="GR"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPR"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="PR"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSL"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="SL"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipViaVerde"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="Vía Verde"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipParques"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="Parques Nacionales"/>
        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>
</ScrollView>

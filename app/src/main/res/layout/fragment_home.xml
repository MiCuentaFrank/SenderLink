<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_app">

    <!-- ðŸŸ© APP BAR FIJA -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sl_primary"
        android:fitsSystemWindows="true"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarHome"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.Material3.Light"
            app:title="SenderLink"
            app:titleTextColor="@color/text_on_dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ðŸ§­ CONTENIDO SCROLLABLE -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- â­ Carrusel de rutas destacadas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeaturedRoutes"
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <!-- ðŸ“‹ RUTAS RECIENTES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutas recientes"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

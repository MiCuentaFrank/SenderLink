<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:fitsSystemWindows="true"
    tools:context=".view.fragments.PerfilFragment">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sl_primary"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarPerfil"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Perfil"
            app:titleTextColor="@color/text_on_dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENIDO -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER DEL PERFIL (sin botón de ajustes) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/sl_primary">

                <!-- Imagen de fondo opcional (puedes añadirla después) -->
                <ImageView
                    android:id="@+id/imgBackgroundProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.3"
                    android:contentDescription="Fondo de perfil" />

            </RelativeLayout>

            <!-- TARJETA CON INFO DEL USUARIO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="-60dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- FOTO DE PERFIL CIRCULAR -->
                    <ImageView
                        android:id="@+id/imgFotoPerfil"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_circle_transparent"
                        android:contentDescription="Foto de perfil" />

                    <!-- NOMBRE -->
                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="Usuario"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- SUBTÍTULO -->
                    <TextView
                        android:id="@+id/txtSubtitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="Explorador"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <!-- BOTONES DE ACCIÓN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- BOTÓN EDITAR PERFIL -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Editar perfil"
                            android:textColor="@color/text_on_dark"
                            app:backgroundTint="@color/sl_primary"
                            app:cornerRadius="12dp" />

                        <!-- BOTÓN AJUSTES -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSettings"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Ajustes"
                            android:textColor="@color/sl_primary"
                            app:strokeColor="@color/sl_primary"
                            app:strokeWidth="2dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: MIS LOGROS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry">

                <!-- HEADER DE SECCIÓN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mis logros"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/txtVerTodosLogros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VER TODO"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/sl_primary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- RECYCLER DE LOGROS -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLogros"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" />

            </LinearLayout>
            <!-- SECCIÓN: MIS PUBLICACIONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry">

                <!-- HEADER DE SECCIÓN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mis publicaciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/txtVerMisPublicaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VER TODO"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/sl_primary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- RECYCLER DE POSTS -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMisPublicaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_post" />

            </LinearLayout>


            <!-- SECCIÓN: MIS RUTAS PUBLICADAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry">

                <!-- HEADER DE SECCIÓN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mis rutas publicadas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- BOTÓN CAMBIAR VISTA -->
                    <TextView
                        android:id="@+id/btnCambiarVista"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="⊞"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

                <!-- RECYCLER DE RUTAS -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRutasPublicadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_profile_route" />

            </LinearLayout>

            <!-- ESPACIADO INFERIOR -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
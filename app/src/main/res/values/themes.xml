<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SenderLink"
        parent="Theme.Material3.Light.NoActionBar">

        <!-- Colores -->
        <item name="colorPrimary">@color/sl_primary</item>
        <item name="colorPrimaryVariant">@color/sl_primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_dark</item>
        <item name="colorSecondary">@color/sl_accent</item>

        <!-- STATUS BAR: verde + iconos blancos -->
        <item name="android:statusBarColor">@color/sl_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- NAV BAR (opcional, pero recomendable si el bottom es blanco) -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Fondo -->
        <item name="android:windowBackground">@color/bg_app</item>

        <!-- Mantener esto -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.SenderLink" parent="Base.Theme.SenderLink"/>

    <!-- Avatar circular -->
    <style name="ShapeAppearance.SenderLink.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- ✅ Alias para cuando algún XML usa @style/ShapeAppearanceOverlay -->
    <style name="ShapeAppearanceOverlay" parent="ShapeAppearanceOverlay.App"/>

    <style name="ShapeAppearanceOverlay.App.CornerFull">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.SenderLink" parent="ShapeAppearance.SenderLink.Circle"/>

</resources>

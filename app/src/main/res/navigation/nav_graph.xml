<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">
    <action
        android:id="@+id/action_global_groupChatFragment"
        app:destination="@id/groupChatFragment" />
    <action
        android:id="@+id/action_global_routeDetailFragment"
        app:destination="@id/routeDetailFragment" />


    <!-- ========================= -->
    <!-- HOME -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.senderlink.app.view.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_routeDetailFragment"
            app:destination="@id/routeDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_homeFragment_to_mapasFragment"
            app:destination="@id/nav_maps"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <!-- ========================= -->
    <!-- DETALLE RUTA -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/routeDetailFragment"
        android:name="com.senderlink.app.view.fragments.RouteDetailFragment"
        android:label="Detalle Ruta"
        tools:layout="@layout/fragment_route_detail">

        <argument
            android:name="routeId"
            app:argType="string" />

        <action
            android:id="@+id/action_routeDetailFragment_to_nav_maps"
            app:destination="@id/nav_maps" />

        <!-- ✅ MODIFICADO: Ahora navega a nav_comunidad en vez de rutasGrupalesFragment -->
        <action
            android:id="@+id/action_routeDetailFragment_to_nav_comunidad"
            app:destination="@id/nav_comunidad" />

    </fragment>


    <!-- ========================= -->
    <!-- COMUNIDAD -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/nav_comunidad"
        android:name="com.senderlink.app.view.fragments.SocialFragment"
        android:label="Comunidad"
        tools:layout="@layout/fragment_social">

        <!-- ✅ NUEVO: Argumento para seleccionar tab inicial -->
        <argument
            android:name="initialTab"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="routeId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <!-- ========================= -->
    <!-- MAPAS -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/nav_maps"
        android:name="com.senderlink.app.view.fragments.MapasFragment"
        android:label="Mapas"
        tools:layout="@layout/fragment_mapas">

        <!-- Argumentos para filtros desde Home -->
        <argument
            android:name="filterType"
            app:argType="string"
            android:defaultValue="ALL"
            app:nullable="true" />

        <!-- Argumentos para cuando vienes de RouteDetail -->
        <argument
            android:name="routeName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="startLat"
            app:argType="float"
            android:defaultValue="0.0" />

        <argument
            android:name="startLng"
            app:argType="float"
            android:defaultValue="0.0" />

        <argument
            android:name="endLat"
            app:argType="float"
            android:defaultValue="0.0" />

        <argument
            android:name="endLng"
            app:argType="float"
            android:defaultValue="0.0" />

        <argument
            android:name="distanceKm"
            app:argType="float"
            android:defaultValue="0.0" />

        <argument
            android:name="difficulty"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="routePoints"
            app:argType="float[]"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/action_nav_maps_to_routeDetailFragment"
            app:destination="@id/routeDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <!-- ========================= -->
    <!-- PERFIL -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.senderlink.app.view.fragments.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <action
            android:id="@+id/action_perfilFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.senderlink.app.view.fragments.EditProfileFragment"
        android:label="Editar perfil"
        tools:layout="@layout/fragment_edit_profile" />

    <!-- ========================= -->
    <!-- EVENTOS GRUPALES -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/rutasGrupalesFragment"
        android:name="com.senderlink.app.view.fragments.RutasGrupalesFragment"
        android:label="Eventos"
        tools:layout="@layout/fragment_rutas_grupales">

        <!-- ✅ NUEVO: si vienes desde RouteDetail -->
        <argument
            android:name="routeId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_rutasGrupalesFragment_to_routeDetailFragment"
            app:destination="@id/routeDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />



    </fragment>


    <!-- ========================= -->
    <!-- CHAT GRUPAL -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/groupChatFragment"
        android:name="com.senderlink.app.view.fragments.GroupChatFragment"
        android:label="GroupChatFragment"
        tools:layout="@layout/fragment_group_chat">

        <argument
            android:name="chatId"
            app:argType="string" />

        <argument
            android:name="eventName"
            app:argType="string" />

        <argument
            android:name="eventoId"
            app:argType="string"
            android:defaultValue="" />

    </fragment>


</navigation>